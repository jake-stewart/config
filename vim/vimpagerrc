let &t_SI = "\<Esc>[5 q"
let &t_EI = "\<Esc>[1 q"
let &t_SR = "\<Esc>[4 q"
let &t_8f = "\<Esc>[38;2;%lu;%lu;%lum"
let &t_8b = "\<Esc>[48;2;%lu;%lu;%lum"

syntax on
set background=dark
set termguicolors
set ttimeoutlen=0
set mouse=a
set ttymouse=sgr
colorscheme custom

set nocursorline laststatus=0 timeoutlen=0 wrapscan noloadplugins incsearch hlsearch scrolloff=0
au VimEnter * set t_ve= scrolloff=0 wrapscan
au VimEnter * nnoremap <silent><esc> :noh<CR>
au VimLeave * set t_ve&vim
au VimSuspend * set t_ve&vim

au BufWinEnter,WinEnter * if &buftype == 'terminal' | set t_ve&vim | else | set t_ve= | endif
au TerminalWinOpen * set t_ve&vim
au CmdLineEnter * set t_ve&vim
au CmdLineLeave * if &buftype != 'terminal' | set t_ve= | endif


